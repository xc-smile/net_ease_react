.goods-list-container
  width 100%
  margin-bottom .1rem
  .large-classify
    width 100%
    .large-list
      width 100%
      background-color white
      .large-title
        width 100%
        height .6rem
        line-height .6rem
      .goods
        width 100%
        display flex
        flex-wrap wrap
        justify-content space-evenly
        margin-bottom .1rem
      .goods-list
        width 1.725rem
        margin-bottom .08rem
        .more
          width 100%
          height 2.075rem
          font-size .19rem
          background-color #f4f4f4
          line-height 2.075rem
        .image
          width 100%
          background-color: #f4f4f4
          img
            width 100%
        .info
          text-align left
          div
            width 100%
            height .35rem
            background-color #F1ECE2
            color #9f8a60
            line-height .35rem
            font-size .14rem
            white-space nowrap
            text-overflow ellipsis
            overflow hidden
            margin-bottom .05rem
          p
            white-space nowrap
            text-overflow ellipsis
            overflow hidden
            margin-bottom .03rem
          span
            color #b4282d
            font-size .19rem