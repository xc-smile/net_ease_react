@import "../../assets/stylus/mixins.styl"
.foot-nav
  top-border-1px(#e4e4e4)
  position fixed
  z-index 100
  left 0
  right 0
  bottom 0
  background-color #fff
  width 100%
  height .5rem
  display flex
  .foot-item
    display flex
    text-align center
    flex-grow 1
    flex-direction column
    margin .05rem 0
    span
      font-size .12rem
      margin-top .02rem
      margin-bottom .02rem
      .iconfont
        font-size .22rem
  .active
    color #b4282d