@import '../../assets/stylus/mixins.styl'
.classify-header
  bottom-border-1px(#ededed)
  width 100%
  box-sizing border-box
  padding .08rem .15rem
  position fixed
  top: 0
  background-color white
  z-index 11
  .header-box
    width 100%
    height 100%
    background-color #ededed
    border-radius .05rem
    line-height .28rem
    color #666

.main
  margin-bottom .5rem
  .classify-container
    display flex
    width 100%
    height 100%
    background-color: white
    .large-list
      width .81rem
      height 5.72rem
      overflow hidden
      flex-shrink 0
      ul
        width 100%
        box-sizing border-box
        padding .2rem 0 0
        :nth-child(1)
          margin-top 0
        li
          width 100%
          height .25rem
          font-size .14rem
          margin-top .2rem
          line-height .25rem
        .active
          color #b4282d
          position relative
          font-size .18rem
          &:after
            content ''
            left 0
            top 0
            position absolute
            width .02rem
            height 100%
            background-color #b4282d
    .small-list
      flex-grow 2
      overflow hidden
      height 5.72rem
      box-sizing border-box
      padding .15rem .15rem .1rem